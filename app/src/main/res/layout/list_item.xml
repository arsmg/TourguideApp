<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <RelativeLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">

        <TextView
            style="@style/location_name"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/location_name"
            tools:text="locationName"
            />

        <TextView
            android:layout_below="@id/location_name"
            style="@style/location_description"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/location_description"
            tools:text="description"
            />

        <ImageView
            android:id="@+id/location_symbol"
            android:src="@drawable/ic_location_on_black_18dp"
            style="@style/location_symbol"
            />

        <TextView
            android:id="@+id/locations_location"
            style="@style/locations_location"
            tools:text="location"/>

        <TextView
            android:id="@+id/open_hours"
            style="@style/open_hours"
            tools:text="open_hours"/>

    </RelativeLayout>
</LinearLayout>